/ locals:
/ * search_path
/ name
/ placeholder
/ select_path
/ new_params
/ klass

- name ||= ""

.search-container (
  name = name
  class = (klass ||= '')
)
  input(
    name = 'query'
    id = 'query'
    type = 'text'
    autocomplete = 'off'
    value = (default_value ||= nil)
    placeholder = (placeholder ||= 'Search')
    data-source-path = search_path
    data-select-path = (select_path ||= '#')
    data-new-params = (new_params ||= nil)
  )
  a.glyphicon.glyphicon-search
  .results.close-on-blur
